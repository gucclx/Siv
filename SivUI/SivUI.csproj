<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net5.0-windows</TargetFramework>
		<UseWindowsForms>true</UseWindowsForms>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>

		<RootNamespace>SivUI</RootNamespace>
		<AssemblyName>SivUI</AssemblyName>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="SivBd.db" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="SivBd.db">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="squirrel.windows" Version="2.0.1" />
	  <PackageReference Include="System.Data.SQLite.Core" Version="1.0.113.7" />
	  <PackageReference Include="WinCopies.WindowsAPICodePack.Shell" Version="2.2.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\SivBiblioteca\SivBiblioteca.csproj">
		</ProjectReference>
	</ItemGroup>
</Project>